{
  "name": "mango-pos-monorepo",
  "version": "1.0.0",
  "description": "Mango POS Monorepo - Offline-first salon management system",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "onlyBuiltDependencies": ["electron", "esbuild", "electron-winstaller"]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "dev:store": "turbo dev --filter=@mango/store-app",
    "build:store": "turbo build --filter=@mango/store-app",
    "dev:electron": "turbo dev --filter=@mango/store-app-electron",
    "dev:control": "turbo dev --filter=@mango/control-center",
    "build:control": "turbo build --filter=@mango/control-center",
    "dev:online": "turbo dev --filter=@mango/online-store",
    "build:online": "turbo build --filter=@mango/online-store",
    "create-test-users": "npx ts-node scripts/auth-migration/create-test-users.ts"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "prettier": "^3.5.3",
    "@changesets/cli": "^2.28.1"
  }
}
