# Mango Pad Environment Variables
# Copy this file to .env and configure for your environment

# Default Salon ID (optional - can also be set in Settings)
VITE_DEFAULT_SALON_ID=

# Default MQTT Broker URL (optional - can also be set in Settings)
# Use ws:// for local development, wss:// for production
VITE_DEFAULT_MQTT_URL=ws://localhost:1883

# Skip settings prompt on start if already configured (optional)
VITE_SKIP_SETTINGS_ON_START=false
