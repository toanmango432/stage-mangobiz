{
  "name": "@mango/ai-tools",
  "version": "1.0.0",
  "private": true,
  "description": "AI tool definitions for Mango Connect - schemas, handlers, and registry for AI-controllable operations",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.5"
  },
  "peerDependencies": {
    "@mango/types": "workspace:*",
    "@mango/api-contracts": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.5.4"
  }
}
