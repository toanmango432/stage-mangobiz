{
  "name": "@mango/database",
  "version": "1.0.0",
  "private": true,
  "description": "IndexedDB (Dexie.js) database operations for Mango POS",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest"
  },
  "dependencies": {
    "@mango/types": "workspace:*",
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.8",
    "typescript": "^5.5.4",
    "vitest": "^4.0.16",
    "fake-indexeddb": "^6.2.4"
  }
}
